@model List<Cell>

@{
    ViewData["Title"] = "Home Page";
}

        <div class="div-sudoku-grid">
            <h2 class="display-4">Solve my Sudoku puzzle!</h2>
            <table class="table-sudoku-grid">
                @for (int row = 0; row < 9; row++)
                {
                    <tr>
                        @for (int column = 0; column < 9; column++)
                        {
                        <td class="table-sudoku-grid-cell">
                            @Model[row * 9 + column].Value
                        </td>
                        }
                    </tr>
                }
            </table>
            <button type="submit">Solve!</button>
        </div>